{ Setup a G-major chord with 4 channels but don't play it yet }
[def {SetTone}
  push
  1<< tmp=
  $100 tmp| {Channel 1} SetupChannel!
  $200 tmp| {Channel 2} SetupChannel!
  $300 tmp| {Channel 3} SetupChannel!
  $400 tmp| {Channel 4} SetupChannel!
  pop ret
] SetTone=

